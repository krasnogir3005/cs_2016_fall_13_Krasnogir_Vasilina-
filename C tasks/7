#include <stdio.h>

int main(void)

{

float a,b,d;
char s;
int p = (int)a; 
int k = (int)b;
int m;

 int i=0;
printf("Vvedite dva chisla i znak deistviya: ");
scanf("%f %f %c", &a,&b,&s);

switch (s)
{
case '+': d=a+b, printf("\n%f+%f=%f\n ",a,b,d); break;
case '-': d=a-b, printf("\n%f-%f=%f\n ",a,b,d); break;
case '*': d=a*b, printf("\n%f*%f=%f\n ",a,b,d); break;
case '/': d=a/b, printf("\n%f/%f=%f\n ",a,b,d); break;
case '%': m=p%k, printf("%i\n", m ); break;
case '^': for(i=0;i<b;++i)
          d*=a;
          printf("%f\n", d); break;
default: printf("\nERROR\n"); break;

}
return (0);
}
